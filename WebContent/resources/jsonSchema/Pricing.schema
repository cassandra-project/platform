{
    "name": "Pricing",
    "type": "object",
    "description": "Pricing schema",
    "properties": {
        "scn_id": {
            "type": "string",
            "description": "The ObjectId of the Scenario that the Pricing policy belong",
            "optional": false
        },
        "name": {
            "type": "string",
            "description": "Name of the pricing policy",
            "optional": true
        },
        "description": {
            "type": "string",
            "description": "Description of the demographic data",
            "optional": true
        },
        "type": {
            "type": "string",
            "description": "Pricing policy types",
            "optional": false,
            "enum": [
                "ScalarEnergyPricing",
                "ScalarEnergyPricingTimeZones",
                "EnergyPowerPricing",
                "AllInclusivePricing"
            ]
        },
        "fixedCharge": {
            "type": "number",
            "description": "Fixed charge",
            "optional": true
        },
        "billingCycle": {
            "type": "integer",
            "description": "Billing cycle",
            "optional": true
        },
        "offpeakPrice": {
            "type": "number",
            "description": "Offpeak price",
            "optional": true
        },
        "contractedCapacity": {
            "type": "number",
            "description": "Contracted capacity",
            "optional": true
        },
        "energyPrice": {
            "type": "number",
            "description": "Energy price",
            "optional": true
        },
        "powerPrice": {
            "type": "number",
            "description": "Power price",
            "optional": true
        },
        "fixedCost": {
            "type": "number",
            "description": "Fixed cost",
            "optional": true
        },
        "contractedEnergy": {
            "type": "number",
            "description": "Contracted energy",
            "optional": true
        },
        "additionalCost": {
            "type": "number",
            "description": "Additional cost",
            "optional": true
        },  
        "levels": {
            "type": "array",
            "description": "An array pricing levels",
            "optional": true,
            "items" : {
                "type" : "object",
                "description" : "Levels",
                "properties" : {           
                    "price" : {
                        "type": "number",
                        "description": "The probability of appearance for this appliance"
                    },
                    "level" : {
                        "type": "number",
                        "description": "The probability of appearance for this appliance",
                        "optional" : true
                    }
                }
            }
        },
        "offpeak": {
            "type": "array",
            "description": "An array time zones",
            "optional": true,
            "items" : {
                "type" : "object",
                "description" : "Time zones",
                "properties" : {           
                    "from" : {
                        "type": "integer",
                        "description": "The probability of appearance for this appliance"
                    },
                    "to" : {
                        "type": "integer",
                        "description": "The probability of appearance for this appliance"
                    }
                }
            }
        }
    },
    "additionalProperties" : false
}
